<Window x:Class="MemoryGame.View.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame.View"
        xmlns:vm="clr-namespace:MemoryGame.ViewModel"
        mc:Ignorable="d"
        Title="Memory Game - Costin" 
        Height="650" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#3A3A3A">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Width" Value="130"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#4A4A4A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A5A5A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#4A4A4A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A5A5A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#4A4A4A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        CornerRadius="5"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A5A5A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="ListView">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:SignInViewModel/>
    </Window.DataContext>

    <Grid>
        <!-- Main Content -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock 
                Grid.Row="0"
                Text="Sign in" 
                FontSize="24" 
                FontWeight="Bold" 
                HorizontalAlignment="Center"
                Margin="0,20,0,10"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- User List -->
                <Border 
                    Grid.Column="0" 
                    Background="#2A2A2A" 
                    CornerRadius="10" 
                    Margin="20,10">
                    <StackPanel Margin="20">
                        <TextBlock 
                            Text="Select User" 
                            FontSize="20" 
                            Margin="0,0,0,15"/>

                        <ListView 
                            Height="300" 
                            ItemsSource="{Binding Users}" 
                            SelectedItem="{Binding SelectedUser}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <Border 
                                            Width="50" 
                                            Height="50" 
                                            CornerRadius="25" 
                                            Background="#3A3A3A" 
                                            Margin="0,0,15,0">
                                            <Image 
                                                Source="{Binding AvatarPath}" 
                                                Stretch="UniformToFill"/>
                                        </Border>
                                        <TextBlock 
                                            Text="{Binding Username}" 
                                            VerticalAlignment="Center" 
                                            FontSize="16"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <StackPanel 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,15,0,0">
                            <Button 
                                Content="New User" 
                                Command="{Binding NewUserCommand}" 
                                Style="{StaticResource MenuButtonStyle}"/>
                            <Button 
                                Content="Delete User" 
                                Command="{Binding DeleteUserCommand}" 
                                Style="{StaticResource MenuButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Avatar Selection -->
                <Border 
                    Grid.Column="1" 
                    Background="#2A2A2A" 
                    CornerRadius="10" 
                    Margin="20,10">
                    <StackPanel Margin="20">
                        <TextBlock 
                            Text="Avatar" 
                            FontSize="20" 
                            Margin="0,0,0,15"/>

                        <Border 
                            Width="250" 
                            Height="250" 
                            Background="#3A3A3A" 
                            CornerRadius="125" 
                            Margin="0,20" 
                            HorizontalAlignment="Center">
                            <Image 
                                Source="{Binding CurrentAvatar}" 
                                Stretch="UniformToFill"/>
                        </Border>

                        <StackPanel 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,20,0,0">
                            <Button 
                                Content="Previous" 
                                Command="{Binding PreviousAvatarCommand}" 
                                Style="{StaticResource MenuButtonStyle}"/>
                            <Button 
                                Content="Next" 
                                Command="{Binding NextAvatarCommand}" 
                                Style="{StaticResource MenuButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Bottom Buttons -->
            <StackPanel 
                Grid.Row="2" 
                Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                Margin="0,5,0,20">
                <Button 
                    Content="Play" 
                    Command="{Binding PlayCommand}" 
                    Style="{StaticResource MainButtonStyle}"/>
                <Button 
                    Content="Exit" 
                    Command="{Binding ExitCommand}"
                    Style="{StaticResource MainButtonStyle}"/>
            </StackPanel>
        </Grid>

        <!-- New User Dialog Overlay -->
        <Border 
            Background="#80000000"
            Visibility="{Binding NewUserDialogVisibility}">
            <Border 
                Width="350" 
                Height="250" 
                Background="#2A2A2A" 
                CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock 
                        Grid.Row="0"
                        Text="New User" 
                        FontSize="24" 
                        FontWeight="Bold" 
                        HorizontalAlignment="Center"
                        Margin="0,20,0,10"/>

                    <!-- Content -->
                    <Border 
                        Grid.Row="1" 
                        Background="#3A3A3A" 
                        CornerRadius="10" 
                        Margin="20,10">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock 
                                Grid.Row="0"
                                Text="Enter Username:" 
                                FontSize="16" 
                                Margin="0,0,0,10"/>

                            <TextBox 
                                Grid.Row="1"
                                Text="{Binding NewUsername, UpdateSourceTrigger=PropertyChanged}"
                                FontSize="16" 
                                Padding="10,5"
                                Margin="0,0,0,5"
                                Background="#4A4A4A"
                                Foreground="White"
                                BorderThickness="0"/>
                        </Grid>
                    </Border>

                    <!-- Buttons -->
                    <StackPanel 
                        Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20">
                        <Button 
                            Content="Save" 
                            Command="{Binding SaveNewUserCommand}"
                            Style="{StaticResource DialogButtonStyle}"/>
                        <Button 
                            Content="Cancel" 
                            Command="{Binding CancelNewUserCommand}"
                            Style="{StaticResource DialogButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>