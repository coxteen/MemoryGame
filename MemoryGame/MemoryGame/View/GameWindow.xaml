<Window x:Class="MemoryGame.View.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame.View"
        xmlns:vm="clr-namespace:MemoryGame.ViewModel"
        mc:Ignorable="d"
        Title="Memory Game - Costin" 
        Height="800" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#3A3A3A">

    <Window.Resources>
        <Style x:Key="GameButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#4A4A4A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A5A5A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card template -->
        <Style x:Key="CardStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#4A4A4A"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="CardBorder" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderThickness="2"
                                BorderBrush="#5A5A5A">
                            <Grid>
                                <!-- Card Back -->
                                <TextBlock 
                                    x:Name="CardBack"
                                    Text="?" 
                                    FontSize="48" 
                                    FontWeight="Bold" 
                                    Foreground="White" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>

                                <!-- Card Front (Image) -->
                                <Image 
                                    x:Name="CardFront"
                                    Source="{Binding ImageSource}" 
                                    Stretch="Uniform"
                                    Margin="5"
                                    Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsFlipped}" Value="True">
                                <Setter TargetName="CardBack" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="CardFront" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="CardBorder" Property="Background" Value="#2A2A2A"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsMatched}" Value="True">
                                <Setter TargetName="CardBorder" Property="BorderBrush" Value="#4CAF50"/>
                                <Setter TargetName="CardBorder" Property="BorderThickness" Value="3"/>
                            </DataTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CardBorder" Property="BorderBrush" Value="#7A7A7A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:GameViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar with Game Info -->
        <Grid Grid.Row="0" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Moves Counter -->
            <TextBlock 
                Grid.Column="0" 
                Text="{Binding Moves, StringFormat='Moves: {0}'}" 
                FontSize="18" 
                Foreground="White" 
                HorizontalAlignment="Left"
                VerticalAlignment="Center"/>

            <!-- Title -->
            <TextBlock 
                Grid.Column="1"
                Text="Memory Game" 
                FontSize="24" 
                FontWeight="Bold" 
                Foreground="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>

            <!-- Timer -->
            <TextBlock 
                Grid.Column="2" 
                Text="{Binding TimeRemaining, StringFormat='Time: {0}'}" 
                FontSize="18" 
                Foreground="White" 
                HorizontalAlignment="Right"
                VerticalAlignment="Center"/>
        </Grid>

        <!-- Game Board -->
        <ItemsControl 
            Grid.Row="1" 
            ItemsSource="{Binding Cards}" 
            Margin="20">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="4" Columns="4"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button 
                        Style="{StaticResource CardStyle}" 
                        Command="{Binding DataContext.CardClickCommand, 
                            RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                        CommandParameter="{Binding}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Bottom Button Bar -->
        <StackPanel 
            Grid.Row="2" 
            Orientation="Horizontal" 
            HorizontalAlignment="Center" 
            Margin="0,10,0,20">

            <Button 
                Content="Save Game" 
                Command="{Binding SaveGameCommand}" 
                Style="{StaticResource GameButtonStyle}"
                Margin="10,10,5,10"/>

            <Button 
                Content="Back to Menu" 
                Command="{Binding BackToMenuCommand}" 
                Style="{StaticResource GameButtonStyle}"
                Margin="5,10,10,10"/>
        </StackPanel>

        <!-- Game Over Message -->
        <Border 
            Grid.RowSpan="3" 
            Background="#80000000" 
            Visibility="{Binding MessageVisibility}">
            <Border 
                Width="400" 
                Height="200" 
                Background="#2A2A2A" 
                CornerRadius="10">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock 
                        Text="{Binding GameMessage}" 
                        FontSize="24" 
                        Foreground="White" 
                        TextWrapping="Wrap"
                        TextAlignment="Center"
                        Margin="20"/>
                    <Button 
                        Content="Back to Menu" 
                        Command="{Binding BackToMenuCommand}" 
                        Style="{StaticResource GameButtonStyle}"
                        Width="200"
                        Margin="10,30,10,10"
                        HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Border>

        <!-- Save Game Confirmation Message -->
        <Border 
            Grid.RowSpan="3" 
            Background="#80000000" 
            Visibility="{Binding SaveMessageVisibility}">
            <Border 
                Width="400" 
                Height="200" 
                Background="#2A2A2A" 
                CornerRadius="10">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock 
                        Text="{Binding SaveGameMessage}" 
                        FontSize="20" 
                        Foreground="White" 
                        TextWrapping="Wrap"
                        TextAlignment="Center"
                        Margin="20"/>
                    <Button 
                        Content="OK" 
                        Command="{Binding CloseSaveMessageCommand}" 
                        Style="{StaticResource GameButtonStyle}"
                        Width="100"
                        Margin="10,30,10,10"
                        HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>