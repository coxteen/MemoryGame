<Window x:Class="MemoryGame.View.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame.View"
        xmlns:vm="clr-namespace:MemoryGame.ViewModel"
        mc:Ignorable="d"
        Title="Memory Game - Costin" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#3A3A3A">
    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#4A4A4A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A5A5A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OverlayButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#4A4A4A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A5A5A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OverlayTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:MenuWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <!-- Main Menu -->
        <StackPanel
            Grid.Column="0" 
            Background="#3A3A3A" 
            VerticalAlignment="Stretch"
            HorizontalAlignment="Center">

            <TextBlock 
                Text="Menu" 
                FontSize="24" 
                FontWeight="Bold" 
                Foreground="White"
                HorizontalAlignment="Center"
                Margin="0,20,0,30"/>

            <Button 
                Content="Category" 
                Style="{StaticResource MenuButtonStyle}"
                x:Name="CategoryButton"/>

            <Button 
                Content="Options" 
                Style="{StaticResource MenuButtonStyle}"
                x:Name="OptionsButton"/>

            <Button 
                Content="New Game" 
                Style="{StaticResource MenuButtonStyle}"
                Command="{Binding NewGameCommand}"
                x:Name="NewGameButton"/>

            <Button 
                Content="Open Game" 
                Style="{StaticResource MenuButtonStyle}"
                x:Name="OpenGameButton"/>

            <Button 
                Content="Statistics" 
                Style="{StaticResource MenuButtonStyle}"
                x:Name="StatisticsButton"/>

            <Button 
                Content="About" 
                Style="{StaticResource MenuButtonStyle}"
                Command="{Binding AboutCommand}"
                x:Name="AboutButton"/>

            <Button 
                Content="Logout" 
                Style="{StaticResource MenuButtonStyle}"
                Command="{Binding LogoutCommand}"
                x:Name="ExitButton"
                Margin="10,30,10,10"/>
        </StackPanel>

        <!-- About Overlay -->
        <Border 
            Background="#80000000"
            Visibility="{Binding AboutVisibility}">
            <Border 
                Width="350" 
                Height="300" 
                Background="#2A2A2A" 
                CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock 
                        Grid.Row="0"
                        Text="About" 
                        FontSize="24" 
                        FontWeight="Bold" 
                        Foreground="White"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,10"/>

                    <Border 
                        Grid.Row="1" 
                        Background="#3A3A3A" 
                        CornerRadius="10" 
                        Margin="20,10">
                        <StackPanel Margin="20" VerticalAlignment="Center">
                            <TextBlock Text="Nume: Ghiujan Costin-Daniel" Style="{StaticResource OverlayTextBlockStyle}"/>
                            <TextBlock Text="Email: costin.ghiujan@student.unitbv.ro" Style="{StaticResource OverlayTextBlockStyle}"/>
                            <TextBlock Text="Grupa: 10LF232" Style="{StaticResource OverlayTextBlockStyle}"/>
                            <TextBlock Text="Specializarea: Informatica" Style="{StaticResource OverlayTextBlockStyle}"/>
                        </StackPanel>
                    </Border>

                    <Button 
                        Grid.Row="2" 
                        Content="Close" 
                        Command="{Binding CloseAboutCommand}"
                        Style="{StaticResource OverlayButtonStyle}"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20"/>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>