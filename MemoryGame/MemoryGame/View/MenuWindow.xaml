<Window x:Class="MemoryGame.View.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame.View"
        xmlns:vm="clr-namespace:MemoryGame.ViewModel"
        mc:Ignorable="d"
        Title="Memory Game - Costin" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#3A3A3A">
    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#4A4A4A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A5A5A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:MenuWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <StackPanel
            Grid.Column="0" 
            Background="#3A3A3A" 
            VerticalAlignment="Stretch"
            HorizontalAlignment="Center">

            <TextBlock 
                Text="Menu" 
                FontSize="24" 
                FontWeight="Bold" 
                Foreground="White"
                HorizontalAlignment="Center"
                Margin="0,20,0,30"/>

            <Button 
                Content="Category" 
                Style="{StaticResource MenuButtonStyle}"
                x:Name="CategoryButton"/>

            <Button 
                Content="Options" 
                Style="{StaticResource MenuButtonStyle}"
                x:Name="OptionsButton"/>

            <Button 
                Content="New Game" 
                Style="{StaticResource MenuButtonStyle}"
                x:Name="NewGameButton"/>

            <Button 
                Content="Open Game" 
                Style="{StaticResource MenuButtonStyle}"
                x:Name="OpenGameButton"/>

            <Button 
                Content="Statistics" 
                Style="{StaticResource MenuButtonStyle}"
                x:Name="StatisticsButton"/>

            <Button 
                Content="About" 
                Style="{StaticResource MenuButtonStyle}"
                Command="{Binding AboutCommand}"
                x:Name="AboutButton"/>

            <Button 
                Content="Logout" 
                Style="{StaticResource MenuButtonStyle}"
                Command="{Binding LogoutCommand}"
                x:Name="ExitButton"
                Margin="10,30,10,10"/>
        </StackPanel>
    </Grid>
</Window>